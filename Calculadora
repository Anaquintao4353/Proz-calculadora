def calculadora (num1, num2, operad):
    if (operad == 1):
        return num1 + num2
    elif (operad == 2) :
        return num1 - num2
    elif (operad == 3):
        return num1 * num2
    elif (operad == 4) :
        return num1 / num2
    else:
        return 0
resultado = calculadora(4,7,3)
print(resultado)

